<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 自定义RadioButton样式 -->
    <style name="radio_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <!-- Indicator样式 -->
    <style name="StyledIndicators" parent="@android:style/Theme.Light">

        <!-- 给CirclePageIndicator设置样式 -->
        <!-- <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item> -->


        <!-- 给LinePageIndicator设置样式 -->
        <!-- <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item> -->


        <!-- 给TitlePageIndicator设置样式 -->
        <!-- <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item> -->


        <!-- 给TabPageIndicator设置样式 -->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>

        <!-- 给UnderlinePageIndicator设置样式 -->
        <!-- <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item> -->
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/custom_tab_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <!-- <item name="android:divider">@drawable/custom_tab_indicator_divider</item> -->
        <!-- <item name="android:dividerPadding">10dp</item> -->
        <!-- <item name="android:showDividers">middle</item> -->

        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>